<%- include('Header.ejs'); %>
<body id="body" class="d-flex flex-column min-vh-100">
  <%- include('Navegacion.ejs', {ventana:"OTRO", tipoUsuario:tipo}); %>
  <div class="card mx-auto my-auto background perfil">
    <div class="card-body d-grid gap-4" id="cardB">
      <h1 class="card-title text-center">Perfil</h1>
      <form class="d-grid gap-4 form" id="formPerfil">
        <div class="d-grid col-11 mx-auto gap-2">
          <div class="row">
            <div class="d-grid col-6">
              <label for="Nombre" class="form-label">Nombre de empresa</label>
              <input type="text" class="form-control" id="Nombre" name="Nombre" aria-describedby="Nombre de empresa" value="<%= usuario.getNombre()%>" maxlength="32">
            </div>
            <div class="d-grid col-6">
              <label for="Email" class="form-label">E-mail</label>
              <input type="email" class="form-control" id="EmailR" name="Email" aria-describedby="Email" value="<%= usuario.getEmail()%>" disabled>
            </div>
          </div>
          <div class="row">
            <div class="d-grid col-6">
              <label for="Telefono" class="form-label">Teléfono</label>
              <input type="text" class="form-control" id="Telefono" name="Telefono" aria-describedby="Teléfono" value="<%= usuario.getTelefono()%>" maxlength="16">
            </div>
          </div>
        </div>
        <div class="d-grid col-11 mx-auto gap-2">
          <div class="row justify-content-end">
            <div class="d-grid col-2">
              <button type="submit" form="formPerfil" class="btn btn-primary">Modificar</button>
            </div>
          </div>
        </div>
      </form>
      <h1 class="card-title text-center">Contraseña</h1>
      <form class="d-grid gap-3 needs-validation" novalidate id="formContrasenna" >
        <div class="d-grid col-11 mx-auto gap-2">
          <div class="row">
            <div class="d-grid col-6">
              <label for="Contrasenia" class="form-label">Contraseña</label>
              <input type="password" class="form-control" id="ContraseniaR" name="Contrasenia" aria-describedby="Contraseña" maxlength="32">
            </div>
            <div class="d-grid col-6">
              <label for="CContrasenia" class="form-label">Confirmar contraseña</label>
              <input type="password" class="form-control" id="CContrasenia" name="CContrasenia" aria-describedby="Confirmar contraseña" maxlength="32">
            </div>
          </div>
          <div class="row justify-content-end">
            <div class="d-grid col-2">
              <button type="submit" form="formContrasenna" class="btn btn-primary">Modificar</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
  <%- include('Mensaje.ejs'); %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="../Utilidades.js"></script>
  <script src="../Js/Mensaje.js"></script>
  <script src="../Usuario.js"></script>
  <script src="../Js/Perfil.js"></script>
</body>
</html>