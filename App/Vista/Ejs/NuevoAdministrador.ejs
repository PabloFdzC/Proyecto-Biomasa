<%- include('Header.ejs'); %>
<body id="body" class="d-flex flex-column min-vh-100" style="background-image: url('../Images/ambitious-creative-co-rick-barrett-g_bglWB48JA-unsplash.jpg');/* height: 100%; */background-size: cover;background-repeat: no-repeat;background-attachment: fixed;background-position-y: center;background-position-x: center;"></body>
  <%- include('Navegacion.ejs', {ventana:"OTRO", tipoUsuario:"Administrador", notificacion}); %>
  <div class="card mx-auto my-auto background">
    <div class="d-grid gap-4 esconde" id="Registrarse">
      <h2 class="text-center">Registrase</h2>
      <form class="d-grid gap-4 form" id="formRegistrarse">
        <div class="d-grid col-11 mx-auto gap-2">
          <div class="row">
            <div class="d-grid col-6">
              <label for="Nombre" class="form-label">Nombre</label>
              <input type="text" class="form-control" id="Nombre" name="Nombre" aria-describedby="Nombre" maxlength="32">
            </div>
            <div class="d-grid col-6">
              <label for="Email" class="form-label">E-mail</label>
              <input type="email" class="form-control" id="Email" name="Email" aria-describedby="Email" maxlength="32">
            </div>
          </div>
          <div class="row">
            <div class="d-grid col-6">
              <label for="Telefono" class="form-label">Teléfono</label>
              <input type="text" class="form-control" id="Telefono" name="Telefono" aria-describedby="Teléfono" maxlength="16">
            </div>
          </div>
          <div class="row">
            <div class="d-grid col-6">
              <label for="Contrasenia" class="form-label">Contraseña</label>
              <input type="password" class="form-control" id="ContraseniaR" name="Contrasenia" aria-describedby="Contraseña" maxlength="32">
            </div>
            <div class="d-grid col-6">
              <label for="CContrasenia" class="form-label">Confirmar contraseña</label>
              <input type="password" class="form-control" id="CContrasenia" name="CContrasenia" aria-describedby="Confirmar contraseña" maxlength="32">
            </div>
          </div>
        </div>
        <div class="d-grid col-11 mx-auto gap-2">
          <div class="row justify-content-end">
            <div class="d-grid col-2">
              <button type="button" class="btn btn-secondary irInicioSesion">Volver</button>
            </div>
            <div class="d-grid col-2">
              <button type="submit" form="formRegistrarse" class="btn btn-primary enviaRegistrase">Enviar</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
  <%- include('Mensaje.ejs'); %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="../Utilidades.js"></script>
