<%- include('Header.ejs'); %>
<body id="body" class="d-flex flex-column min-vh-100">
<%- include('Navegacion.ejs', {ventana:"COMPRARBIOMASA", tipoUsuario: "Comprador"}); %>
  <div class="card mx-auto background cardLista mb-2">
    <div class="card-body" id="cardB">
      <form class="d-grid gap-4 form" id="buscarBiomasa">
        <div class="row justify-content-between">
          <div class="d-grid col-12">
            <label for="Busca" class="form-label">Buscar biomasa</label>
            <div class="row">
              <div class="col-10">
                <input type="text" class="form-control" id="Busca" name="Parametro" aria-describedby="Buscar biomasa" required>
              </div>
              <div class="col-2">
                <button type="submit" form="formRegistrarse" class="btn btn-primary enviaRegistrase">Buscar</button>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
  <div id="biomasas">

  </div>
  <div class="modal fade" id="modalComprar" tabindex="-1" aria-labelledby="comprar" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content background">
        <div class="modal-body d-grid gap-4">
          <h3 class="text-center" id="comprar">Comprar</h3>
          <form class="d-grid col-9 mx-auto gap-2 needs-validation" novalidate id="formComprar">
            <div>
              <div class="row">
                <div class="d-grid col-6">
                  <label class="form-label">Total disponible</label>
                  <label id="TotalDisponible" class="form-label"></label>
                </div>
                <div class="d-grid col-6">
                  <label for="Cantidad" class="form-label">Cantidad por comprar</label>
                  <input type="number" class="form-control" id="Cantidad" name="Cantidad" aria-describedby="Cantidad por comprar">
                </div>
              </div>
              <div class="row">
                <div class="d-grid col-6">
                  <label class="form-label">Precio total:</label>
                </div>
                <div class="d-grid col-6">
                  <label id="Precio" class="form-label"></label>
                </div>
              </div>
            </div>
            <div class="row justify-content-end">
              <div class="col-3">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Volver</button>
              </div>
              <div class="col-3">
                <button type="submit" class="btn btn-primary" form="formComprar">Enviar</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <%- include('Mensaje.ejs'); %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="../Js/Mensaje.js"></script>
  <script src="../Biomasa.js"></script>
  <script src="../Utilidades.js"></script>
  <script src="../Js/ComprarBiomasa.js"></script>
</body>
</html>