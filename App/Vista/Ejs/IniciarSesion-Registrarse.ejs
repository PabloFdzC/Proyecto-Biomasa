<%- include('Header.ejs'); %>
  <body id="body" class="d-flex flex-column min-vh-100">
    <div class="card mx-auto my-auto background " id="cardCont">
      <div class="card-body" id="cardB">
        <div class="d-grid gap-4" id="IniciarSesion">
          <h2 class="text-center">Iniciar sesión</h2>
          <form class="d-grid gap-4 form" id="formIniciarSesion">
            <div class="d-grid col-9 mx-auto gap-2">
              <div>
                <label for="Email" class="form-label">E-mail</label>
                <input type="email" class="form-control" id="Email" name="Email" aria-describedby="Email">
              </div>
              <div>
                <label for="Contrasenia" class="form-label">Contraseña</label>
                <input type="password" class="form-control" id="Contrasenia" name="Contrasenia">
              </div>
            </div>
            <div class="d-grid col-5 mx-auto text-center gap-2">
              <button type="submit" form="formIniciarSesion" class="btn btn-primary">Iniciar sesión</button>
              <a type="button" class="link irRegistrarse">Registrarse</a>
            </div>
          </form>
        </div>
        <div class="d-grid gap-4 esconde" id="Registrarse">
          <h2 class="text-center">Registrase</h2>
          <form class="d-grid gap-4 form" id="formRegistrarse">
            <div class="d-grid col-11 mx-auto gap-2">
              <div class="row">
                <div class="d-grid col-6">
                  <label for="Nombre" class="form-label">Nombre de empresa</label>
                  <input type="text" class="form-control" id="Nombre" name="Nombre" aria-describedby="Nombre de empresa">
                </div>
                <div class="d-grid col-6">
                  <label for="Email" class="form-label">E-mail</label>
                  <input type="email" class="form-control" id="EmailR" name="Email" aria-describedby="Email">
                </div>
              </div>
              <div class="row">
                <div class="d-grid col-6">
                  <label for="Telefono" class="form-label">Teléfono</label>
                  <input type="text" class="form-control" id="Telefono" name="Telefono" aria-describedby="Teléfono">
                </div>
                <div class="d-grid col-6">
                  <label for="TipoUsuario" class="form-label">Tipo de usuario</label>
                  <select class="form-control" id="TipoUsuario" name="TipoUsuario" aria-describedby="Tipo de usuario">
                    <option value="Comprador">Comprador</option>
                    <option value="Vendedor">Vendedor</option>
                  </select>
                </div>
              </div>
              <div class="row">
                <div class="d-grid col-6">
                  <label for="Contrasenia" class="form-label">Contraseña</label>
                  <input type="password" class="form-control" id="ContraseniaR" name="Contrasenia" aria-describedby="Contraseña">
                </div>
                <div class="d-grid col-6">
                  <label for="CContrasenia" class="form-label">Confirmar contraseña</label>
                  <input type="password" class="form-control" id="CContrasenia" name="CContrasenia" aria-describedby="Confirmar contraseña">
                </div>
              </div>
            </div>
            <div class="d-grid col-11 mx-auto gap-2">
              <div class="row justify-content-end">
                <div class="d-grid col-2">
                  <button type="button" class="btn btn-secondary irInicioSesion">Volver</button>
                </div>
                <div class="d-grid col-2">
                  <button type="submit" form="formRegistrarse" class="btn btn-primary enviaRegistrase">Enviar</button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="modal fade background" id="modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="modalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
              <p id="modalText"></p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
              </div>
            </div>
        </div>
      </div>
    </div>
    <%- include('Mensaje'); %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="../Utilidades.js"></script>
    <script src="../Js/Mensaje.js"></script>
    <script src="../IniciarSesion.js"></script>
    <script src="../Registrarse.js"></script>
    <script src="../Js/InicioSesion-Registrarse.js"></script>
  </body>
</html>